{
  "manifest_version": 2,
  "name": "Places",
  "version": "0.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "places@ziade.org",
      "strict_min_version": "42.0"
    }
  },

  "description": "Search Your Browser History.",

  "permissions": [
    "storage",
    "*://localhost/*",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "notifications",
    "<all_urls>"
  ],

  "options_ui": {
    "page": "options.html"
  },

  "omnibox": {
    "keyword": "places"
  },

  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["<all_urls>"],
      "js": ["places.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/magnifying_glass_16.png",
      "32": "icons/magnifying_glass_32.png"
    }
  }
}
